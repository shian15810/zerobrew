<section class="wave-fill">
  <div class="wave-fill-inner">
    <div class="info-grid">
      <div class="install-panel" id="install">
        <div class="install-tabs">
          <div class="install-tab-group">
            {% for tab in home.installs.tabs %}
              <button class="install-tab" data-command="{{ tab.command }}">{{ tab.name }}</button>
            {% endfor %}
          </div>
          <button class="install-copy" type="button" aria-label="Copy install command">Copy</button>
        </div>
        <div class="install-command">
          <code>{{ home.installs.tabs[0].command }}</code>
        </div>
        <p class="install-paragraph">{{ home.installs.installParagraph }}</p>
      </div>

      <div class="bench-panel" id="benchmarks">
        <div class="bench-card" data-bench-count="{{ home.benchmarks.length }}">
          <div class="bench-header">
            <div class="bench-title">
              {% for bench in home.benchmarks %}
                <span class="bench-title-item" data-bench-index="{{ loop.index0 }}">{{ bench.title }}</span>
              {% endfor %}
            </div>
            {% if home.benchmarks.length > 1 %}
              <div class="bench-controls">
                <button class="bench-arrow" type="button" data-direction="prev" aria-label="Previous benchmark">‹</button>
                <button class="bench-arrow" type="button" data-direction="next" aria-label="Next benchmark">›</button>
              </div>
            {% endif %}
          </div>

          {% for bench in home.benchmarks %}
            <div class="bench-list" data-bench-index="{{ loop.index0 }}">
              {% for item in bench.items %}
                <div class="bench-row" style="--bench-color: {{ item.color }};">
                  <div class="bench-label">
                    <span class="bench-name">{{ item.label }}</span>
                    {% if item.tag %}<span class="bench-tag">{{ item.tag }}</span>{% endif %}
                  </div>
                  <div class="bench-bar">
                    <span class="bench-fill" style="width: {{ item.value }}%;"></span>
                    {% if item.speedup %}<span class="bench-speedup-text">{{ item.speedup }}</span>{% endif %}
                  </div>
                  <div class="bench-time">{{ item.time }}</div>
                </div>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
